<body class="page page--faq page--faq_home">
  <div class="page-subheader page-subheader--large page-subheader--search">
          <div class="page-subheader__inner">
              <div class="page-subheader__container">
                  <h1 class="page-subheader__title">Search for food details!</h1>
                  <div class="search search--subheader">
                    <%= form_tag :search, method: :get, class: "query search__input" do %>
                      <div class="form-group">
                          <%= text_field_tag "search", nil, placeholder: 'e.g. 1 apple', :onclick => 'if($(this).val()=="Enter search term..."){$(this).val("");};', class: "form-control" %>                      </div>
                        <%= submit_tag "Search", class: "btn btn-success" %>
                    <% end %>
                  </div>
              </div>
          </div>
      </div>
</body>
